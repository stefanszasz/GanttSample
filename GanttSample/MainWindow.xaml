<Window x:Class="GanttSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ganttSample="clr-namespace:GanttSample"
        Title="MainWindow"
        Height="350"
        Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ganttSample:GanttControl x:Name="GanttControl">
            <ganttSample:GanttControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <ganttSample:GanttRowPanel MinDate="{Binding MinDate, Mode=OneWay, ElementName=GanttControl}"
                                               MaxDate="{Binding MaxDate, Mode=OneWay, ElementName=GanttControl}" />
                </ItemsPanelTemplate>
            </ganttSample:GanttControl.ItemsPanel>
            <ganttSample:GanttControl.Template>
                <ControlTemplate>
                    <Grid>
                        <Canvas x:Name="BackgroundCanvas" />
                        <ScrollViewer x:Name="ScrollViewer"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Auto">
                            <ItemsPresenter />
                        </ScrollViewer>
                    </Grid>
                </ControlTemplate>
            </ganttSample:GanttControl.Template>
            <ganttSample:GanttControl.ItemContainerStyle>
                <Style TargetType="ganttSample:GanttItem">
                    <Setter Property="VerticalAlignment"
                            Value="Top" />
                    <Setter Property="Background"
                            Value="{Binding Color}" />
                    <Setter Property="Text"
                            Value="{Binding Text}" />
                    <Setter Property="StartDate"
                            Value="{Binding StartDate}" />
                    <Setter Property="EndDate"
                            Value="{Binding EndDate}" />
                    <Setter Property="ToolTip"
                            Value="{Binding Hint}" />
                    <Setter Property="IsItemVisible"
                            Value="{Binding IsItemVisible}" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ganttSample:GanttItem}">
                                <Border Background="{TemplateBinding Background}"
                                        Height="22"
                                        x:Name="Border"
                                        ToolTip="{TemplateBinding ToolTip}">
                                    <TextBlock Text="{TemplateBinding Text}"
                                               x:Name="TextBlock"
                                               TextTrimming="CharacterEllipsis"
                                               VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected"
                                             Value="True">
                                        <Trigger.Setters>
                                            <Setter Property="BorderThickness"
                                                    TargetName="Border"
                                                    Value="1" />
                                            <Setter Property="BorderBrush"
                                                    TargetName="Border"
                                                    Value="DarkBlue" />
                                            <Setter Property="Opacity"
                                                    TargetName="Border"
                                                    Value="0.5" />
                                            <Setter Property="Foreground"
                                                    TargetName="TextBlock"
                                                    Value="GhostWhite" />
                                        </Trigger.Setters>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ganttSample:GanttControl.ItemContainerStyle>
        </ganttSample:GanttControl>
        <Button Grid.Row="1"
                Click="ButtonBase_OnClick">Add</Button>
        <Button Grid.Row="2"
                Width="150"
                Content="Zoom in"
                HorizontalAlignment="Left"
                Name="DecreaseButton"
                Click="DecreaseButton_OnClick" />
        <Button Grid.Row="2"
                Width="150"
                Content="Zoom out"
                HorizontalAlignment="Right"
                Name="IncreaseButton"
                Click="IncreaseButton_OnClick" />
        <Button Grid.Row="3"
                Width="150"
                Content="ChangeDateFormat"
                HorizontalAlignment="Right"
                Name="ChangeDateFormatButton"
                Click="ChangeDateFormatButton_OnClick" />
    </Grid>
</Window>
