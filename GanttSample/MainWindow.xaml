<Window x:Class="GanttSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ganttSample="clr-namespace:GanttSample"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        Title="MainWindow"
        Height="350"
        Width="525">
    <Control.Resources>
    </Control.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ganttSample:GanttControl x:Name="GanttControl">
            <ganttSample:GanttControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <ganttSample:GanttRowPanel />
                </ItemsPanelTemplate>
            </ganttSample:GanttControl.ItemsPanel>
            <ganttSample:GanttControl.ItemContainerStyle>
                <Style TargetType="ganttSample:GanttItem">
                    <Setter Property="VerticalAlignment"
                            Value="Top" />
                    <Setter Property="Background"
                            Value="{Binding Color}" />
                    <Setter Property="Order"
                            Value="{Binding Order}" />
                    <Setter Property="Text"
                            Value="{Binding Text}" />
                    <Setter Property="StartDate"
                            Value="{Binding StartDate}" />
                    <Setter Property="EndDate"
                            Value="{Binding EndDate}" />
                    <Setter Property="ToolTip"
                            Value="{Binding Hint}" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ganttSample:GanttItem}">
                                <Border Background="{TemplateBinding Background}"
                                        Height="22"
                                        ToolTip="{TemplateBinding ToolTip}">
                                    <TextBlock Text="{TemplateBinding Text}" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ganttSample:GanttControl.ItemContainerStyle>
        </ganttSample:GanttControl>
        <Button Grid.Row="1" Click="ButtonBase_OnClick">Add</Button>
    </Grid>
</Window>
