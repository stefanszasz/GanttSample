<Window x:Class="GanttSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ganttSample="clr-namespace:GanttSample"
        Title="MainWindow"
        Height="350"
        Width="525">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button Grid.Row="0"
                Click="ButtonBase_OnClick">Add</Button>
        <Button Grid.Row="1"
                Width="150"
                Content="Zoom in"
                HorizontalAlignment="Left"
                Name="DecreaseButton"
                Click="DecreaseButton_OnClick" />
        <Button Grid.Row="1"
                Width="150"
                Content="Zoom out"
                HorizontalAlignment="Right"
                Name="IncreaseButton"
                Click="IncreaseButton_OnClick" />
        <Button Grid.Row="2"
                Width="150"
                Content="Move left"
                HorizontalAlignment="Left"
                Name="MoveLeftButton"
                Click="MoveLeftButton_OnClick" />
        <Button Grid.Row="2"
                Width="150"
                Content="Move right"
                HorizontalAlignment="Right"
                Name="MoveRightButton"
                Click="MoveRightButton_OnClick" />
        <Button Grid.Row="2"
                Width="150"
                Visibility="Hidden"
                Content="ChangeDateFormat"
                HorizontalAlignment="Right"
                Name="ChangeDateFormatButton"
                Click="ChangeDateFormatButton_OnClick" />

        <ganttSample:GanttControl x:Name="GanttControl" Grid.Row="3">
            <Control.Resources>
                <ganttSample:GanttItemWidthConverter x:Key="GanttItemWidthConverter" />
            </Control.Resources>
            <ganttSample:GanttControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <ganttSample:GanttRowPanel MinDate="{Binding MinDate, Mode=OneWay, ElementName=GanttControl}"
                                               MaxDate="{Binding MaxDate, Mode=OneWay, ElementName=GanttControl}" />
                </ItemsPanelTemplate>
            </ganttSample:GanttControl.ItemsPanel>
            <ganttSample:GanttControl.Template>
                <ControlTemplate>
                    <Grid>
                        <Canvas x:Name="PART_Background" />
                        <ScrollViewer x:Name="ScrollViewer"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Auto">
                            <ItemsPresenter />
                        </ScrollViewer>
                    </Grid>
                </ControlTemplate>
            </ganttSample:GanttControl.Template>
            <ganttSample:GanttControl.ItemContainerStyle>
                <Style TargetType="ganttSample:GanttItem">
                    <Setter Property="VerticalAlignment"
                            Value="Top" />
                    <Setter Property="Background"
                            Value="{Binding Color}" />
                    <Setter Property="Text"
                            Value="{Binding Text}" />
                    <Setter Property="GroupName"
                            Value="{Binding GroupName}" />
                    <Setter Property="StartDate"
                            Value="{Binding StartDate}" />
                    <Setter Property="EndDate"
                            Value="{Binding EndDate}" />
                    <Setter Property="ToolTip"
                            Value="{Binding Hint}"/>
                    <Setter Property="IsItemVisible"
                            Value="{Binding IsItemVisible}" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ganttSample:GanttItem}">
                                <Border Background="{TemplateBinding Background}"
                                        Height="22"
                                        x:Name="Border"
                                        MaxWidth="{Binding ActualWidth, Converter={StaticResource GanttItemWidthConverter}, 
                                                                               RelativeSource={RelativeSource TemplatedParent}, 
                                                                               UpdateSourceTrigger=PropertyChanged}"
                                        ToolTip="{TemplateBinding ToolTip}">
                                    <TextBlock Text="{TemplateBinding Text}"
                                               x:Name="TextBlock"
                                               TextTrimming="CharacterEllipsis"
                                               TextWrapping="Wrap"
                                               VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected"
                                             Value="True">
                                        <Trigger.Setters>
                                            <Setter Property="BorderThickness"
                                                    TargetName="Border"
                                                    Value="1" />
                                            <Setter Property="BorderBrush"
                                                    TargetName="Border"
                                                    Value="DarkBlue" />
                                            <Setter Property="Foreground"
                                                    TargetName="TextBlock"
                                                    Value="GhostWhite" />
                                        </Trigger.Setters>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ganttSample:GanttControl.ItemContainerStyle>
        </ganttSample:GanttControl>
    </Grid>
</Window>
